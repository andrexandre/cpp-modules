END			:= \033[0m
RED			:= \033[1;31m
GREEN		:= \033[1;32m
YELLOW		:= \033[1;33m
BLUE		:= \033[1;34m
CYAN		:= \033[1;36m

CXX			:= g++
CXXFLAGS	:= -Wall -Wextra -Werror -std=c++98

SRCS		:= PhoneBook.cpp
OBJS		:= $(SRCS:.cpp=.o)
NAME		:= MyAwesomePhoneBook

all: $(NAME)

$(NAME): $(OBJS)
	@$(CXX) $(CXXFLAGS) $^ -o $@
	@echo "\n$(BLUE)$(NAME)$(END) $(GREEN)stuff compiled$(END) 💻\n"

%.o: %.cpp
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -f $(OBJS)

fclean: clean
	@rm -f $(NAME)
	@echo "\n$(BLUE)$(NAME)$(END) $(GREEN)stuff removed$(END) 🗑️\n"

re: fclean all

run: $(NAME)
	@./$(NAME)

e: fclean

.PHONY: all clean fclean re run e